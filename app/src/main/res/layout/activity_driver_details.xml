<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DriverDetails">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Rider Details"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:fontFamily="@font/lato_bold"
        android:layout_marginTop="25dp"/>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:hint="Enter Your Name"
            android:paddingStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bluebutton"/>
        <EditText
            android:id="@+id/eMail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:hint="Enter Mail Id"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bluebutton"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:hint="Enter Mobile Number"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:background="@drawable/bluebutton"/>

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:hint="Enter address"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bluebutton"/>

        <TextView
            android:id="@+id/selectImage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bluebutton"
            android:fontFamily="@font/inika_regular"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:hint="Upload Licence"
            android:textColor="@color/black"
            app:drawableEndCompat="@drawable/add" />
        <ImageView
            android:id="@+id/selectedImageView"
            android:layout_width="175dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/boy"
            android:contentDescription="image_description" />

        <Button
            android:id="@+id/submit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/navy"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="35dp"
            android:text="Submit"
            android:textSize="18dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>